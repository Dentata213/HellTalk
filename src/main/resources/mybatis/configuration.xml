<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	
	<!-- 클래스 별칭 설정 :매퍼파일에서 별칭으로 사용하고자 할때 -->
	<typeAliases>
		<!-- 예시 <typeAlias type="com.kosmo.restapi.model.UsersDto" alias="usersDto"/> -->
		
		<typeAlias type="com.helltalk.springapp.models.CaldDto" alias="CaldDto"/>
		<typeAlias type="com.helltalk.springapp.models.PaymentDTO" alias="PaymentDTO"/>
		<typeAlias type="com.helltalk.springapp.models.FoodDTO" alias="FoodDTO"/>
		<typeAlias type="com.helltalk.springapp.models.DietDTO" alias="DietDTO"/>
		<typeAlias type="com.helltalk.springapp.service.ExerciseDTO" alias="ExerciseDTO"/>
		<typeAlias type="com.helltalk.springapp.service.QnADto" alias="QnADTO"/>
		
		<typeAlias type="com.helltalk.springapp.service.MemberDTO" alias="MemberDTO"/>
		<typeAlias type="com.helltalk.springapp.service.BBSDto" alias="BBSDto"/>
		<typeAlias type="com.helltalk.springapp.models.CalcDto" alias="CalcDto"/>
		<typeAlias type="com.helltalk.springapp.models.ChatDto" alias="ChatDto"/>
	</typeAliases>

	<!-- 매퍼파일(SQL쿼리 결과와 자바빈 매핑)의 위치정보 설정 xml파일 생성후 mapper기입 -->
	<mappers>
		<!-- 예시 <mapper resource="mybatis/mapper/example.xml"/> -->
		
		<mapper resource="mybatis/mapper/Cald.xml"/> 
		<mapper resource="mybatis/mapper/Payment.xml"/> 
		<mapper resource="mybatis/mapper/Food.xml"/>
		<mapper resource="mybatis/mapper/Diet.xml"/>
		<mapper resource="mybatis/mapper/Exer.xml"/> 
		<mapper resource="mybatis/mapper/Member.xml"/> 
		<mapper resource="mybatis/mapper/Board.xml"/> 
		<mapper resource="mybatis/mapper/Backend.xml"/>
	 	<mapper resource="mybatis/mapper/Calc.xml"/>  
	 	<mapper resource="mybatis/mapper/Chat.xml"/>    
	</mappers>
</configuration>